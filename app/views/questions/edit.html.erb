<h1>Edit Question</h1>

<%= form_for :question, url: question_path(@question), method: :put do |f| %>
    <p>
      <%= f.label :question %><br/>
      <%= f.text_area :question %>
    </p>
    <p>
      <%= f.label :username %><br/>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>