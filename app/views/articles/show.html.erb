<h1><%= @article.title %></h1>
<p><%= simple_format(@article.text) %></p>
<p>Category: <%= @article.category.category %></p>
<p class="attributes">Posted by <%= link_to @article.username, user_path(@article.user_id) %></p>
<p>Like <%= @article.get_likes.size %></p>
<p>
  <%= link_to "Like", like_article_path(@article), method: :put %>
  <%= link_to "Dislike", dislike_article_path(@article), method: :put %>
</p>
<h2>Comments (<%= @article.comments.count %>):</h2>
<% @article.comments.each do |comment| %>
    <p><%= simple_format(comment.text) %></p>
    <p class="attributes">Commented by <%= comment.username %></p>
    <p>Like <%= comment.get_likes.size %></p>
    <p>
      <%= link_to "Like", like_article_comments_path(@article, comment), method: :put %>
      <%= link_to "Dislike", dislike_article_comments_path(@article, comment), method: :put %>
    </p>
    <hr/>
<% end %>
<br/>

<% if user_signed_in? %>
    <h2>Write a comment:</h2>
    <%= form_for ([@article, @article.comments.build]) do |f| %>
        <p>
          <%= f.label :text %><br/>
          <%= f.text_area :text, class: "form-control", style: "width: 50%; height: 100px" %>
        </p>
        <p>
          <%= f.submit class: "btn btn-info" %>
        </p>
    <% end %>
<% end %>