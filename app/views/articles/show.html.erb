<h1><%= @article.title %></h1>
<p><%= @article.text %></p>
<p>Posted by <%= @article.username %></p>
<h2>Comments:</h2>
<% @article.comments.each do |comment| %>
    <p><%= comment.text %></p>
    <p>Commented by <%= comment.username %></p>
    <hr/>
<% end %>
<br/>

<h2>Write a comment:</h2>
<%= form_for ([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>