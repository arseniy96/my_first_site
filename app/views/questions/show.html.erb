<h1><%= @question.question %></h1>
<h2>Comments:</h2>
<% @question.comments.each do |comment| %>
    <p><%= comment.text %></p>
    <hr/>
<% end %>
<br/>

<h2>Write a comment:</h2>
<%= form_for ([@question, @question.comments.build]) do |f| %>
    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>