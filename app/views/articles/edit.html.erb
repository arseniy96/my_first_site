<h1>Edit Article</h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title, class: "form-control", style: "width: 40%;" %>
    </p>
    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text, class: "form-control", style: "width: 50%; height: 100px" %>
    </p>
    <p>
      <%= f.label :category_id %><br/>
      <%= f.collection_select :category_id, Category.all, :id, :category, {}, {class: "form-control", style: "width: 30%;"} %>
    </p>
    <p>
      <%= f.submit class: "btn btn-info" %>
    </p>
<% end %>