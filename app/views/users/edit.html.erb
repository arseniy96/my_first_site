<h1>Edit Profile</h1>

<%= form_for :user, url: user_path(@user), method: :put do |f| %>
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email, class: "form-control", style: "width: 40%;" %>
    </p>
    <p>
      <%= f.label :username %><br/>
      <%= f.text_field :username, class: "form-control", style: "width: 40%;" %>
    </p>
    <p>
      <%= f.file_field :avatar %>
    </p>
    <p>
      <%= f.submit class: "btn btn-primary" %>
    </p>
<% end %>